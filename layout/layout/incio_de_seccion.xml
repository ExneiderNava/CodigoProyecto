<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_general"
    android:padding="24dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/logo_ebenezer"
        android:contentDescription="Logo" />

    <!-- Título -->
    <TextView
        android:id="@+id/Tx_codigoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de usuario"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:gravity="center" />

    <!-- Campo de contraseña -->
    <EditText
        android:id="@+id/ps_codigo"
        android:layout_width="500dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_redondeado"
        android:hint="Ingrese su código"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="22sp"
        android:elevation="20dp"/>

    <!-- Botón ingresar -->
    <Button
        android:id="@+id/bt_ingresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:background="@drawable/button_ingresar"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:elevation="20dp"/>
</LinearLayout>
