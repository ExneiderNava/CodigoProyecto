<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Cada botón/imagen es una categoría -->
    <ImageButton
        android:id="@+id/cat_snacks"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/snacks"
        android:contentDescription="snacks"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/cat_comidas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/comidas"
        android:contentDescription="comidas"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/cat_bebidas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bebidas"
        android:contentDescription="bebidas"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/cat_postres"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/postres"
        android:contentDescription="postres"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/cat_otros"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/otros"
        android:contentDescription="otros"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />

</LinearLayout>
